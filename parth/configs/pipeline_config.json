{
  "pipeline_name": "Environmental Sustainability SME",
  "version": "1.0.0",
  "components": {
    "vector_db": {
      "enabled": true,
      "db_path": "partc/milvus_data.db",
      "embedding_model": "all-mpnet-base-v2"
    },
    "llm": {
      "enabled": true,
      "model": "gemini-2.0-flash",
      "temperature": 0.7,
      "max_tokens": 2000
    },
    "hybrid_retrieval": {
      "enabled": true,
      "alpha": 0.6,
      "bm25_k1": 1.5,
      "bm25_b": 0.75
    },
    "agent": {
      "enabled": true,
      "max_conversation_history": 20,
      "context_window": 5
    },
    "document_generation": {
      "enabled": true,
      "output_dir": "parth/generated_documents",
      "preferred_format": "pdf",
      "fallback_formats": ["docx"]
    },
    "email": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "max_retries": 3
    }
  },
  "workflows": {
    "quiz_generation_and_delivery": {
      "steps": [
        {
          "name": "Generate Quiz",
          "tool": "generate_quiz",
          "required": true,
          "retry": {"max_retries": 2}
        },
        {
          "name": "Export Document",
          "tool": "export_document",
          "required": true,
          "fallback_tool": "export_document_simple"
        },
        {
          "name": "Send Email",
          "tool": "send_email",
          "required": false,
          "retry": {"max_retries": 3}
        }
      ]
    }
  },
  "error_handling": {
    "global_max_retries": 3,
    "backoff_factor": 2.0,
    "log_errors": true
  }
}
